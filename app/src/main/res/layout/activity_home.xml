<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivityJava">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="120dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_snaplink_logo" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivMessenger"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_messenger" />
    </LinearLayout>


    <!-- Unified Feed RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFeed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        tools:listitem="@layout/item_post" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_filled" />

        <ImageView
            android:id="@+id/navSearch"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:contentDescription="Search"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/navAdd"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:contentDescription="Add Post"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_post" />

        <ImageView
            android:id="@+id/navReels"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:contentDescription="Reels"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_reels" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img_current_user"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="1dp" />


    </LinearLayout>

    <!-- Top Border for Bottom Navigation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#222222"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
