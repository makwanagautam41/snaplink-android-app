<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true"
    tools:context=".help">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="12dp"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_back"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Help"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Search Help -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="#808080"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="12dp" />

                    <EditText
                        android:id="@+id/etSearchHelp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Search help articles..."
                        android:textColorHint="#666666"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:background="@null"
                        android:fontFamily="sans-serif"
                        android:inputType="text"
                        android:imeOptions="actionSearch" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Quick Actions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:paddingStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <!-- Contact Support -->
                    <RelativeLayout
                        android:id="@+id/btnContactSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconContactSupport"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#6366F1"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconContactSupport"
                            android:layout_toStartOf="@id/chevronContactSupport"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contact Support"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get help from our support team"
                                android:textColor="#808080"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/chevronContactSupport"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Report a Problem -->
                    <RelativeLayout
                        android:id="@+id/btnReportProblem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconReportProblem"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#EF4444"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconReportProblem"
                            android:layout_toStartOf="@id/chevronReportProblem"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Report a Problem"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Report technical issues or bugs"
                                android:textColor="#808080"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/chevronReportProblem"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Give Feedback -->
                    <RelativeLayout
                        android:id="@+id/btnGiveFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconGiveFeedback"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#10B981"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconGiveFeedback"
                            android:layout_toStartOf="@id/chevronGiveFeedback"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Give Feedback"
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share your suggestions with us"
                                android:textColor="#808080"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/chevronGiveFeedback"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Help Topics -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help Topics"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:paddingStart="4dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_horizontal"
                    android:showDividers="middle">

                    <!-- Getting Started -->
                    <RelativeLayout
                        android:id="@+id/btnGettingStarted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconGettingStarted"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#F59E0B"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconGettingStarted"
                            android:layout_toStartOf="@id/chevronGettingStarted"
                            android:text="Getting Started"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/chevronGettingStarted"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Account Management -->
                    <RelativeLayout
                        android:id="@+id/btnAccountManagement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconAccountManagement"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_user"
                            app:tint="#8B5CF6"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconAccountManagement"
                            android:layout_toStartOf="@id/chevronAccountManagement"
                            android:text="Account Management"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/chevronAccountManagement"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Privacy & Security -->
                    <RelativeLayout
                        android:id="@+id/btnPrivacySecurity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconPrivacySecurity"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#06B6D4"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconPrivacySecurity"
                            android:layout_toStartOf="@id/chevronPrivacySecurity"
                            android:text="Privacy &amp; Security"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/chevronPrivacySecurity"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Posts & Stories -->
                    <RelativeLayout
                        android:id="@+id/btnPostsStories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconPostsStories"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#EC4899"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconPostsStories"
                            android:layout_toStartOf="@id/chevronPostsStories"
                            android:text="Posts &amp; Stories"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/chevronPostsStories"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Messages & Notifications -->
                    <RelativeLayout
                        android:id="@+id/btnMessagesNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconMessagesNotifications"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#F97316"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconMessagesNotifications"
                            android:layout_toStartOf="@id/chevronMessagesNotifications"
                            android:text="Messages &amp; Notifications"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/chevronMessagesNotifications"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <!-- Troubleshooting -->
                    <RelativeLayout
                        android:id="@+id/btnTroubleshooting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/iconTroubleshooting"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            app:tint="#14B8A6"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/iconTroubleshooting"
                            android:layout_toStartOf="@id/chevronTroubleshooting"
                            android:text="Troubleshooting"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif" />

                        <ImageView
                            android:id="@+id/chevronTroubleshooting"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQs Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:paddingStart="4dp" />

            <!-- FAQ Item 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/faqCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/iconExpand1"
                            android:text="How do I reset my password?"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/iconExpand1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/faqAnswer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Go to Settings → Account → Change Password. You'll need to enter your current password before setting a new one."
                        android:textColor="#B3B3B3"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ Item 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/faqCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/iconExpand2"
                            android:text="How do I make my account private?"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/iconExpand2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/faqAnswer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Navigate to Settings → Privacy → Account Privacy and toggle the switch to make your account private."
                        android:textColor="#B3B3B3"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ Item 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/faqCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/iconExpand3"
                            android:text="How do I delete a post?"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/iconExpand3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/faqAnswer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Tap on the post you want to delete, then tap the three dots (⋯) at the top right corner and select 'Delete'."
                        android:textColor="#B3B3B3"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ Item 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/faqCard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/iconExpand4"
                            android:text="Can I recover a deleted account?"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/iconExpand4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_chevron_down"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/faqAnswer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="You have 30 days to recover your account after deletion. Simply log back in during this period to reactivate it."
                        android:textColor="#B3B3B3"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- FAQ Item 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/faqCard5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/iconExpand5"
                            android:text="How do I block or report someone?"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:id="@+id/iconExpand5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#808080" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/faqAnswer5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Visit their profile, tap the three dots (⋯) and select 'Block' or 'Report'. Blocked users won't be able to find your profile or contact you."
                        android:textColor="#B3B3B3"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp"
                        android:fontFamily="sans-serif"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Still Need Help Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_about_customer_care"
                        app:tint="#6366F1"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Still Need Help?"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our support team is here to help you 24/7"
                        android:textColor="#B3B3B3"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_marginBottom="20dp" />

                    <Button
                        android:id="@+id/btnContactSupportBottom"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Contact Support"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/button_primary"
                        android:textAllCaps="false" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>